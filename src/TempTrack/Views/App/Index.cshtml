@model IEnumerable<TempTrack.Models.Record>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-6">
        <h1>Temp Readings</h1>
        <p>Events in descending order</p>

        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Serial</th>
                    <th>Temp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Time</td>
                        <td>@item.Serial</td>
                        <td>@item.Temp</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <div class="col-md-4 col-md-offset-1">
        <h1>Add New</h1>
        <p>Insert a manual read</p>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-primary" /></div>

        </form>
    </div>

</div>